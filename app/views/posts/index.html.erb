<p style="color: green"><%= notice %></p>

<%= search_form_for @q, url: :posts do |f| %>
<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title_cont, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.label :content %>
  <%= f.text_field :content_cont, class: "form-control" %>
</div>
<div class="form-group">
  <%= f.submit "Search", class: "btn btn-primary" %>
</div>
<% end %>


<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
<%= paginate @posts%>